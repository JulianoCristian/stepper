
simple() ::= <<
    state Simple {
        a = "Hello World";
    }
>>

annotationName() ::= <<
    @Comment("this is a comment")
    @TimeoutSeconds(3600)
    @Version("1.0")
    state AnnotationTest {
        c = 5;
    }
>>

assignmentPrimitive() ::= <<
    state assignment {
        a = 5.2;
        b = 10;
        c = "Hello World";
        d.e.f = true;
        e.f.g = false;
    }
>>

assignmentComplex() ::= <<
    state complex {
        value1 = a * b + c.calc(e) - d.length();
        value2 += a * b + c.calc(e) - d.length();
        value3 -= a * b + c.calc(e) - d.length();
        value4 /= a * b + c.calc(e) - d.length();
        value5 *= a * b + c.calc(e) - d.length();
    }
>>

assignmentJson() ::= <<
    state json {
        value = {
            "a": 5,
            "b": 10,
            "c": {
                "d": "x"
            },
            "e": ["p", true, false]
        }
    }
>>

assignmentJsonArray() ::= <<
    state array {
        value = ["p", true, false, 2.5, 10]
    }
>>

assignmentTask() ::= <<
    state mytask {
        @Label("x")
        value = task {
            "a": "b"
        }
    }
>>

task() ::= <<

    state mytask {
        @RetryOnError("abc", "def") { "IntervalSeconds": 3, "MaxAttempts": 4, "BackoffRate": 5 }
        @RetryOnError("pqr") { "IntervalSeconds": 6 }
        @Label("hello")
        task {
            "a": "b"
        }
    }
>>