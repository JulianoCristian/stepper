
stepperShell(root) ::= <<
{
    "startAt": "<root.startState>",
    "States": {
        <constructDefinition(rest(root.constructs), first(root.constructs))>
    }
}
>>

constructDefinition(constructs, current) ::= <<
    <if(current)>
        <current.jsonRepresentation>
    <endif>
    <if(constructs)>
    , <constructDefinition(rest(constructs), first(constructs))>
    <endif>
>>
